<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%d %-5p [%t] %-17C{2} (%13F:%L) - %m%n" />
		</Console>

		<File name="ezmenu_file" fileName="/log/ezmenu.log" append="false">
			<PatternLayout pattern="%d %-5p [%t] %-17c{2} (13F:%L) - %m%n" />
		</File>
	</Appenders>
	<Loggers>
		<Logger name="org.apache.log4j2.xml" level="info" />
		<Root level="debug">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="ezmenu_file" />
		</Root>
	</Loggers>
</Configuration>
